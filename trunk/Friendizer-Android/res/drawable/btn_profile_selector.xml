<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="90" android:endColor="#DCDCDC" android:startColor="#fff" />

            <stroke android:width="1dp" android:color="#B7B7B7" />

            <corners android:radius="3dp" />

            <padding android:bottom="6dp" android:left="6dp" android:right="6dp" android:top="6dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="90" android:endColor="#EDEDED" android:startColor="#fff" />

            <stroke android:width="1dp" android:color="#B7B7B7" />

            <corners android:radius="3dp" />

            <padding android:bottom="6dp" android:left="6dp" android:right="6dp" android:top="6dp" />
        </shape></item>

</selector>