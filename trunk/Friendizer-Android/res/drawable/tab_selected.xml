<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- leave bottom line only 1px of height, the rest is masked out -->
    <item
        android:bottom="1px"
        android:top="63dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/app_background" />
        </shape>
    </item>
    <!-- draw tab background -->
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:endColor="#ccc"
                android:startColor="@color/app_background" />

            <stroke
                android:width="1px"
                android:color="#898989" />
        </shape>
    </item>
    <!-- mask out the bottom line of the tab shape -->
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="63dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/app_background" />
        </shape>
    </item>

</layer-list>