<web-app xmlns:xsi="http://www.w3.org/2001/xmlschema-instance"
    xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    xsi:schemalocation="http://java.sun.com/xml/ns/javaee
                        http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    version="2.5">

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <!-- Other servlets -->

  <servlet>
    <servlet-name>dataMessagingServlet</servlet-name>
    <servlet-class>
      com.google.android.c2dm.server.C2DMRetryServlet
    </servlet-class>
  </servlet>
    
  <servlet-mapping>
    <servlet-name>dataMessagingServlet</servlet-name>
    <url-pattern>/tasks/c2dm</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>LocationManager</servlet-name>
  	<servlet-class>com.teamagly.friendizer.LocationManager</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>LocationManager</servlet-name>
  	<url-pattern>/changeLocation</url-pattern>
  	<url-pattern>/nearbyUsers</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>MarketManager</servlet-name>
  	<servlet-class>com.teamagly.friendizer.MarketManager</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>MarketManager</servlet-name>
  	<url-pattern>/userDetails</url-pattern>
  	<url-pattern>/ownList</url-pattern>
  	<url-pattern>/buy</url-pattern>
  	<url-pattern>/updateStatus</url-pattern>
  </servlet-mapping>
  
    <servlet>
  	<servlet-name>InboxManager</servlet-name>
  	<servlet-class>com.teamagly.friendizer.InboxManager</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>InboxManager</servlet-name>
  	<url-pattern>/send</url-pattern>
  	<url-pattern>/getConversation</url-pattern>
  	<url-pattern>/getUnread</url-pattern>
  	<url-pattern>/getInbox</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>AchievementsManager</servlet-name>
  	<servlet-class>com.teamagly.friendizer.AchievementsManager</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>AchievementsManager</servlet-name>
  	<url-pattern>/achievements</url-pattern>
  </servlet-mapping>

  <!-- Security -->

  <!--  Require user login for the .html welcome page -->
  <security-constraint>
    <web-resource-collection>
      <url-pattern>/index.html</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>*</role-name>
    </auth-constraint>
  </security-constraint>

  <!--  Require admin role for the tasks servlet -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>tasks</web-resource-name>
      <url-pattern>/tasks/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>

</web-app>
